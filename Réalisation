
(function() {
    const skills = ["C1","C2","C3","C4","C5","C6","C7","C8"];
    let score = 0, rounds = 5;
  
    for (let r = 1; r <= rounds; r++) {
      const seq = Array.from({length: r}, () => skills[Math.floor(Math.random()*8)]);
      alert(`Ronde ${r}/${rounds}\nM√©morise : ${seq.join(" ")}`);
      
      let ans = prompt(`Tape la s√©quence (s√©par√©e par espaces):`);
      if (!ans) break; // si Annuler
      
      let reply = ans.toUpperCase().trim().split(/\s+/);
      if (reply.join() === seq.join()) {
        score++;
        console.log(`‚úÖ Correct (Score: ${score})`);
      } else {
        console.log(`‚ùå Faux. Correct: ${seq.join(" ")}, Toi: ${reply.join(" ")}`);
      }
    }
    console.log(`üéØ Jeu fini ! Score final: ${score}/${rounds}`);
  })();
  
